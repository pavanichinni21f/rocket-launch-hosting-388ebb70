SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_KEY=your_anon_key_here

# ============================================================================
# 2. OAUTH PROVIDERS - SOCIAL LOGIN
# ============================================================================

# GOOGLE OAUTH
# Setup: https://console.cloud.google.com/
# Steps:
#   1. Create new project
#   2. Enable Google+ API
#   3. Create OAuth 2.0 Client ID (Web application)
#   4. Add authorized redirect URIs:
#      - http://localhost:5173
#      - https://yourdomain.com
#   5. Copy Client ID

VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# GITHUB OAUTH
# Setup: https://github.com/settings/developers
# Steps:
#   1. Click "New OAuth App"
#   2. Fill Application name, Homepage URL, Authorization callback
#   3. Callback: https://your-domain.com/auth/callback/github
#   4. Copy Client ID and generate new Client Secret

VITE_GITHUB_CLIENT_ID=your_github_client_id
VITE_GITHUB_CLIENT_SECRET=your_github_client_secret

# APPLE OAUTH
# Setup: https://developer.apple.com/account/resources/identifiers/list
# Steps:
#   1. Register new App ID
#   2. Create Sign in with Apple Service ID
#   3. Go to Keys section and create private key

VITE_APPLE_CLIENT_ID=your_apple_client_id
VITE_APPLE_TEAM_ID=your_apple_team_id
VITE_APPLE_KEY_ID=your_apple_key_id

# ============================================================================
# 3. PAYMENT GATEWAYS - INDIA FOCUSED
# ============================================================================

# RAZORPAY (Primary - Recommended for India)
# Setup: https://dashboard.razorpay.com/app/keys
# Features: UPI, Card, Wallet, NetBanking
# Steps:
#   1. Login to Razorpay Dashboard
#   2. Go to Settings > API Keys
#   3. Copy Key ID and Key Secret

VITE_RAZORPAY_KEY_ID=rzp_live_your_razorpay_key
RAZORPAY_SECRET_KEY=your_razorpay_secret_key

# PAYU (Alternative - Multiple Payment Methods)
# Setup: https://dashboard.payumoney.com/
# Features: UPI, Card, NetBanking, Wallet
# Steps:
#   1. Login to PayU Dashboard
#   2. Go to Merchant Settings
#   3. Copy Merchant Key and Merchant Salt

PAYU_MERCHANT_KEY=your_payu_merchant_key
PAYU_MERCHANT_SALT=your_payu_merchant_salt
VITE_PAYU_MERCHANT_KEY=your_payu_merchant_key

# CASHFREE (Alternative - UPI First)
# Setup: https://dashboard.cashfree.com/
# Features: UPI, Card, NetBanking, Wallet
# Steps:
#   1. Login to Cashfree Merchant Dashboard
#   2. Go to Settings > API Keys
#   3. Copy App ID and Secret Key

CASHFREE_APP_ID=your_cashfree_app_id
CASHFREE_SECRET_KEY=your_cashfree_secret_key
CASHFREE_CLIENT_ID=your_cashfree_client_id
CASHFREE_CLIENT_SECRET=your_cashfree_client_secret
CASHFREE_API_KEY=your_cashfree_api_key

# STRIPE (Global - Backup Option)
# Setup: https://dashboard.stripe.com/apikeys
# Features: Credit Cards, Apple Pay, Google Pay
# Steps:
#   1. Login to Stripe Dashboard
#   2. Go to Developers > API Keys
#   3. Copy Publishable and Secret Keys
#   4. Create Webhook endpoint for events

VITE_STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PAYMENT PROVIDER SELECTION
# Options: razorpay, stripe, payu, cashfree
VITE_PAYMENT_PROVIDER=razorpay

# ============================================================================
# 4. EMAIL SERVICES
# ============================================================================

# SENDGRID (Primary - Email Delivery)
# Setup: https://app.sendgrid.com/settings/api_keys
# Features: Transactional emails, Templates, Analytics
